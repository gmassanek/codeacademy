!!!
%html
  %head
    %title Ruby Ecosystem

    = stylesheet_link_tag 'blueprint/screen.css', :media => 'screen' 
    = stylesheet_link_tag 'blueprint/print.css', :media => 'print' 
    = stylesheet_link_tag 'ecosystem.css', :media => 'screen'
    = stylesheet_link_tag 'markdown.css', :media => 'screen'
    = stylesheet_link_tag 'pygments.css', :media => 'screen'
    = stylesheet_link_tag 'jquery-ui-1.8.2.custom.css'

    = javascript_include_tag 'autocomplete-rails.js'
    = javascript_include_tag :defaults, :cache => true
    = javascript_include_tag 'application.js'
    = javascript_include_tag 'd3.js'
    = javascript_include_tag 'd3.layout.js'
    = javascript_include_tag 'd3.geom.js'

    = csrf_meta_tag
    
    %link{:rel => 'shortcut icon', :href => 'images/favicon.ico'}
  %body
    #top 
      =render 'layouts/header'
    .container  
      .span-24
        = render 'shared/notice'
      .span-24
        .content.span-24.last
          = render 'shared/authentication'
      .content.span-24	
        = yield
      #footer
        =render 'layouts/footer'
    - if Rails.env.production?
      :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-21870147-2']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
